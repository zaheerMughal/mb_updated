<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    android:visibility="visible">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:hint="@string/searchHintText_searchToolbar"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="@dimen/search_view_padding_search_toolbar"
        android:paddingRight="@dimen/search_view_padding_search_toolbar"
        android:textColor="@color/goalOverviewDetailTextColor"
        android:textColorHint="@color/search_toolbar_hint_color"
        android:textSize="@dimen/edit_text_box_text_size" />


    <ImageButton
        android:id="@+id/ic_arrowBack"
        style="@style/searchToolbar_imageButtonStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_back_black" />

    <ImageButton
        android:id="@+id/ic_clear"
        style="@style/searchToolbar_imageButtonStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_clear"
        android:visibility="gone" />

</RelativeLayout>