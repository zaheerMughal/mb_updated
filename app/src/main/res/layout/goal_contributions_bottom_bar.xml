<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goalContributionHistoryBottomBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height"
    android:background="@color/bottom_bar_background_color">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contribution_history"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/bottom_bar_text_size"
            app:fontFamily="@font/sfui_display_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ic_goal_contribution_history"
            android:layout_width="@dimen/toolbar_button_width_height"
            android:layout_height="@dimen/toolbar_button_width_height"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/contribution_history"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>