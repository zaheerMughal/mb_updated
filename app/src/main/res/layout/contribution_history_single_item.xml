<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="@dimen/content_width"
    android:layout_gravity="center|top"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center">


    <TextView
        android:id="@+id/dateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/contribution_history_text_size"
        android:gravity="start"
        android:padding="@dimen/key_line_16dp"
        tools:text="24, september, 2018"
        app:fontFamily="@font/sfui_display_medium"/>

    <TextView
        android:id="@+id/amountTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="end"
        android:textSize="@dimen/contribution_history_text_size"
        tools:text="+888,888,888,888,888"
        android:padding="@dimen/key_line_16dp"
        android:textColor="@color/addMoneyTextColor"
        app:fontFamily="@font/sfui_display_medium"/>


</LinearLayout>